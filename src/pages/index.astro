---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import ELMapLogo from '~/assets/images/expertslivemap.jpg';
import AdvaniaLogo from '~/assets/images/advania_uk_logo.jpg';
import PerformantaLogo from '~/assets/images/performanta_logo.jpg';
import { Image } from 'astro:assets';

import Speakers from './speakers.astro';

const metadata = {
  title: 'Experts Live UK',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
   title="ExpertsLiveUK - Community Events around Microsoft technologies"
    subtitle="Join us on 20th June 2024, London UK"
    image={{ src: ELMapLogo, alt: 'Conference Image', width: '700px', height: '300px' }}
     actions={[
      {
        variant: 'primary',
        text: 'Register here',
        href: 'https://e.runevents.net/user-group-june-2024/checkout',
        target: '_blank',
      },
      { text: 'Learn more', href: 'https://e.runevents.net/user-group-june-2024' },
    ]}
  >
    <Fragment slot="title">
      Learn from the experts
      <span class="text-accent dark:text-white highlight"> across cloud, data & AI, datacenter, security, and modern workplace</span>
      <p class="font-bold">Date: 20th June 2024</p>
      <p class="font-bold">Location: London, UK</p>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">In person</span> user groups and working towards a huge UK conference.</span>
        Suitable for new learners, established consultants and anyone wanting to learn more.
    </Fragment>
  </Hero>
  <h1></h1>
  <Speakers class="speaker-circle" speakers={[
    {
      name: 'Amy Boyd@Microsoft',
      topic: 'Responsible AI',
      image: 'src/assets/images/amyboyd.jpg'
    },
    {
      name: 'Steve Goodman@Advania',
      topic: 'AI in the Modern Workplace',
      image: 'src/assets/images/stevegoodman.jpg'
    }
  ]} />

  <Features
    title="Why Attend?"
    items={[
      {
        title: 'Learn',
        description: 'From the experts across modern work, platform, security and more.',
      },
      {
        title: 'Network',
        description: 'Meet like-minded professionals and share knowledge.',
      },
      {
        title: 'Experience',
        description: 'Gain insights into the latest technologies and trends.'
      },
    ]}
  />


  <Content title="Sponsors">
    <Fragment slot="content">
      <div class="flex justify-center items-center"> <!-- Add items-center -->
        <div class="flex justify-center flex-col items-center mr-8">
          <Image
            src={AdvaniaLogo}
            alt="Sponsor - Advania"
            class="mx-auto w-50 h-50"
          />
          <p class="mt-4 text-center">Advania</p>
        </div>
        <div class="flex justify-center flex-col items-center mr-8">
          <Image
            src={PerformantaLogo}
            alt="Sponsor - Advania"
            class="mx-auto w-50 h-50"
          />
          <p class="mt-4 text-center">Performanta</p>
        </div>
        <div class="flex justify-center flex-col items-center">
          <div class="border-2 border-gray-300 w-50 h-50 mx-auto flex items-center justify-center">
            <p>This could be you!</p>
          </div>
        </div>
      </div>
    </Fragment>
  </Content>
  </Layout>

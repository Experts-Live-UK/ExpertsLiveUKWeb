---
import { Image } from 'astro:assets';
import Headline from '../blog/Headline.astro';

const { speakers, id } = Astro.props;
---

<Headline
  title="Our Speakers"
  classes={{
    container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
    title: 'text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading',
    subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted dark:text-slate-400',
  }}
/>
<div id={id} class="flex flex-wrap gap-8 max-w-6xl mx-auto mb-12 scroll-mt-52 px-6 md:px-12 xl:px-0">
  {
    speakers.map((speaker, index) => (
      <div class="bg-white dark:bg-slate-900 rounded-2xl shadow-xl px-8 pb-12 sm:px-12 lg:px-8 shadow-shadow-500 shadow-3xl rounded-primary relative mx-auto flex h-96 w-full max-w-[550px] flex-col items-center bg-cover bg-clip-border p-[16px] dark:text-white dark:shadow-none">
        <div class="relative mt-1 flex h-32 w-full justify-center rounded-xl bg-cover bg-gradient-to-tl from-sky-400 to-indigo-900">
          <div class="absolute -bottom-12 flex h-36 w-36 items-center justify-center rounded-full border-[4px] border-white bg-pink-400">
            <Image class="h-full w-full rounded-full" src={speaker.image} alt="" />
          </div>
        </div>
        <div class="my-16 flex flex-col gap-2 items-center">
          <h4 class="text-2xl font-bold">{speaker.name}</h4>
          <p class="text-base font-normal">{speaker.topic}</p>
          <p class="text-base font-normal">{speaker.time}</p>
        </div>
      </div>
    ))
  }
</div>

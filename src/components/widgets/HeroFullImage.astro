---
const { image, title, accent, actions } = Astro.props;
---

<section style={`background-image: url(${image.src});`} class="bg-cover bg-center bg-no-repeat relative">
  <div
    class="absolute inset-0 h-full bg-white/75 sm:bg-transparent dark:sm:from-black/80 dark:sm:to-black/15 sm:from-white/80 sm:to-white/15 ltr:sm:bg-gradient-to-r rtl:sm:bg-gradient-to-l"
  >
  </div>
  <div class="relative mx-auto max-w-screen-xl px-4 py-32 sm:px-6 lg:flex lg:h-screen lg:items-center lg:px-8">
    <div class="max-w-2xl text-center ltr:sm:text-left rtl:sm:text-right">
      <h1 class="text-3xl font-extrabold sm:text-5xl mb-4 !leading-tight">
        {title}
        <strong class="block font-extrabold text-secondary"> {accent}</strong>
      </h1>

      <slot class="mt-4 max-w-lg sm:text-xl/relaxed" name="title" />

      <div class="mt-8 flex flex-wrap gap-4 text-center">
        <a
          href={actions[0].ahref}
          class="block w-full rounded bg-secondary px-12 py-3 text-sm font-medium text-white shadow hover:opacity-80 focus:outline-none focus:ring active:bg-rose-500 sm:w-auto"
        >
          {actions[0].text}
        </a>

        <a
          href={actions[1].ahref}
          class="block w-full rounded bg-white px-12 py-3 text-sm font-medium text-secondary shadow hover:opacity-80 focus:outline-none focus:ring active:text-rose-500 sm:w-auto"
        >
          {actions[1].text}
        </a>
      </div>
    </div>
  </div>
</section>

---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import Headline from '~/components/ui/Headline.astro';
import type { Features } from '~/types';
import { Image } from 'astro:assets';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 2,

  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props as Features;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline} />
  <div class="container m-auto px-6 text-gray-500 md:px-12 xl:px-0">
    <div class="mx-auto grid gap-6 md:w-3/4 lg:w-full lg:grid-cols-2">
      {
        items.map((item) => (
          <div class="bg-white dark:bg-slate-950 rounded-2xl shadow-xl px-8 py-12 sm:px-12 lg:px-8">
            <div class="mb-12 space-y-4">
              <h3 class="text-2xl font-semibold text-secondary">{item.title}</h3>
              <p class="mb-6">{item.description}</p>
              {/* <a href="#" class="block font-medium text-purple-600">
                Know more
              </a> */}
            </div>
            <Image
              src={item.image!.src}
              class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg"
              alt="illustration"
              loading="lazy"
              height={item.image!.height}
              width={item.image!.width}
            />
          </div>
        ))
      }
    </div>
  </div></WidgetWrapper
>
